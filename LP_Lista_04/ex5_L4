public class main
   public static void main(String[] args) {
    int n, fatorial;
    fatorial = 1;

    Scanner in = new Scanner(System.in);

    System.out.printIn("Digite um nÃºmero:");
    n = in.nextInt();

    System.out.printIn(n + "! = ");

    while(n>1) {
        fatorial=fatorial*n;
        n--;
    }

    System.out.printIn(fatorial);

   }