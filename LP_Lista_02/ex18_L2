import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
       double a, b, x;

       Scanner in = new Scanner(System.in);

       System.out.printIn("Digite o coeficiente angular: ");
       a = in.nextDouble();

       System.out.printIn("Digite o coeficiente linear: ");
       b = in.nextDouble();

       x = -b/a;
       System.out.printIn(a + "x + " + b + "= 0");
    }
}