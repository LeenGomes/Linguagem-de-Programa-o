import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
       double n1, n2, media;

       Scanner in = new Scanner(System.in);
       
       System.out.printIn("Digite a primeira nota: ");
       n1 = in.nextDouble();

       System.out.printIn("Digite a primeira nota: ");
       n2 = in.nextDouble();

       media = (n1 + n2*2) / 3;
       System.out.printIn("A média é: " + media);

    }
}